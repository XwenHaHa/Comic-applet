/* pages/recommended/recommended.wxss */
.login-module {
  margin-top: 0.6rem;
  margin-bottom: 0.6rem;
  margin-left: auto;
  margin-right: auto;
  padding-top: 0.8rem;
  padding-bottom: 0.8rem;
  padding-left: 0.6rem;
  padding-right: 0.6rem;
  display: flex;
  align-items: center;
  width: 20.55rem;
  height: 2rem;
  background-color: #ffffff;
  color: #615355;
}

.login-module .avatar {
  margin-right: 0.4rem;
  width: 2.4rem;
  height: 2.4rem;
  background-image: url(https://static3w.kuaikanmanhua.com/static-kkfront-mobile/image/avatar_placeholder.a9e53ee.png);
  background-size: 100% 100%;
}

.login-module .text {
  display: flex;
  flex-direction: column;
  font-size: 0.7rem;
  font-weight: bold;
}

.login-module .btn {
  width: 3.2rem;
  height: 1.425rem;
  margin-left: 140rpx;
  line-height: 1.425rem;
  text-align: center;
  font-size: 0.6rem;
  border-radius: 0.75rem;
  background-color: #F7F9FA;
  font-weight: bold;
}

.card-list {
  width: 100%;
  height: 1700rpx;
  background-color: #fff;
  color: #615355;
}

.card-item {
  width: 600rpx;
  height: 500rpx;
  border: 1px solid #cccccc;
  border-radius: 5%;
  margin: 50rpx auto;
  overflow: hidden;
}

.card-item .title {
  display: flex;
  width: 100%;
  height: 50rpx;
  margin-top: 20rpx;
  /* background-color: skyblue; */
}

.card-item .title p {
  width: 400rpx;
  height: 50rpx;
  margin-left: 10rpx;
  /* background-color: purple; */
}

.card-item .title .btn {
  display: inline-block;
  width: 2.4rem;
  height: 1.2rem;
  margin-left: 100rpx;
  line-height: 1.2rem;
  border-radius: 2.5rem;
  border-width: 0.05rem;
  text-align: center;
  border-style: solid;
  border-color: #e6e6e6;
  background: #ffffff;
  font-size: 0.55rem;
}

.card-item .tabs {
  height: 1.5rem;
  overflow: hidden;
  font-size: 0;
  margin-left: 10rpx;
  /* background-color: skyblue; */
}

.card-item .tabs .tab {
  display: inline-block;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  height: 1.5rem;
  margin-right: 0.3rem;
  padding-left: 0.4rem;
  padding-right: 0.4rem;
  padding-top: 0.15rem;
  font-size: 0.7rem;
  text-align: center;
  line-height: 1rem;
  color: orange;
  background: #f9f3e8;
  border-radius: 0.55rem;
}

.card-item .img-box {
  width: 580rpx;
  height: 300rpx;
  margin: 10rpx 10rpx;
  background-color: #fff;
}

.card-item .img-box image {
  width: 100%;
  height: 100%;
}

.card-item .update {
  display: flex;
  width: 100%;
  height: 50rpx;
  margin-top: 20rpx;
  margin-left: 10rpx;
  line-height: 50rpx;
  font-size: 0.5rem;
}

.card-item .update .name {
  width: 400rpx;
  height: 50rpx;
  margin-left: 10rpx;
}

.card-item .update p {
  width: 1.2rem;
  height: 1.2rem;
  margin-top: 6rpx;
  margin-left: 50rpx;
  border-radius: 2.5rem;
  border-width: 0.05rem;
  text-align: center;
}

.card-item .update p image {
  width: 100%;
  height: 100%;
}

.card-item .update .name span {
  display: inline-block;
}